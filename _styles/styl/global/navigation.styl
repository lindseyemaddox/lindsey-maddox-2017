
header

  nav

    hr
      background-color: transparent
      border-top: 1px solid $white

    a.logo
      display: block
      margin: 0 auto
      width: 40px

      img
        width: 100%

    p.home
      $primary-font($regular)
      font-size: 3em
      letter-spacing: .25em
      line-height: 2em
      padding: 0
      text-align: center
      text-transform: uppercase

      span
        letter-spacing: .025em

      a
        color: $white
        text-decoration: none

    ul
      display: block
      font-size: 1.15em
      letter-spacing: 5px
      margin: 30px auto
      $primary-font($bold)
      text-align: center
      text-transform: uppercase
      width: 100%

      li
        display: inline-block
        padding: 10px 20px

        a
          color: $white
          cursor: pointer
          text-decoration: none
          transition: opacity 300ms ease

          &:hover
            opacity: .5

  p.subhead
    $primary-font($light)
    color: $white
    font-size: 1.95em
    letter-spacing: 0.06em
    line-height: 1em
    padding: 0
    text-align: center
    text-transform: uppercase

    span
      display: inline-block

span.switcher-case
  color: $white
  height: 1em
  margin: 0 10px
  overflow: hidden
  text-align: center
  vertical-align: -5px
  width: auto

  span.switcher
    animation: switcher 8s ease-in-out infinite

    span
      height: 1em !important
      display: block
      font-size: 1em
      line-height: 1em
      padding: 0 10px
      text-align: center
      text-transform: uppercase
      width: auto

#socials
  height: 0
  overflow: hidden
  text-align: center
  transition: height 400ms ease-in

  a
    color: $white
    display: inline-block
    font-size: 2em
    padding: 0 30px
    text-decoration: none
    transition: opacity 300ms ease

    &:hover
      opacity: 0.5

  &.expanded
    height: 36px


@keyframes switcher
  100%,
  0%
    transform: translate(0px, 0em)
  20%
    transform: translate(0px, -1em)
  40%
    transform: translate(0px, -2em)
  60%
    transform: translate(0px, -3em)
  80%
    transform: translate(0px, -4em)
