
.grid
  max-width 1000px
  margin 0 auto

.animate-bg
  align-items: top
  animation: animateBG 20s ease infinite
  background-image: linear-gradient(
    -45deg,
    rgba(59, 173, 227, 1) 0%,
    rgba(87, 111, 230, 1) 25%,
    rgba(152, 68, 183, 1) 51%,
    rgba(255, 53, 127, 1) 100%
  )
  background-size: 300% 300%
  display: flex
  height: 70vh
  padding-top: 20%
  width: 100%

  &.home
    height: 70vh

  &.biopage
    height: 260vh

  &.evidencepage
    height: 260vh

  &.proofpage
    height: 70vh

@keyframes animateBG
  0%
    background-position: 0% 50%
  50%
    background-position: 100% 50%
  100%
    background-position: 0% 50%
